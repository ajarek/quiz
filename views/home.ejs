<%-include('./partials/header')%>
<%-include('./partials/style')%>


<div class="container d-flex flex-column   justify-content-center align-items-center " style="height: 100vh;">

    <% myquests.forEach(mq=>{%>

    <div class="score mb-4">
        <h3>WYNIK: <span class="pkt"></span></h3>
    </div>
    <div class="col-lg-8 d-flex flex-column  justify-content-center shadow align-items-center px-3  ">
        <div class="m-2">
            <h3><%=mq.question%></h3>
        </div>
        <div class="d-flex flex-column justify-content-evenly align-items-center w-100 mt-4">
            <div class="row">
                <button type="button"
                    class="col-lg-5 btn btn-primary m-3 p-2  text-center text-light border border-3  data-toggle="
                    tooltip" data-placement="top" title="Choose options""><h4 class=" author"><%=mq.response1%></h4>
                    </button>
                <button type="button"
                    class="col-lg-5 btn btn-primary m-3 p-2  text-center text-light border border-3  data-toggle="
                    tooltip" data-placement="top" title="Choose options""><h4 class=" author"><%=mq.response2%></h4>
                    </button>
                <button type="button"
                    class="col-lg-5 btn btn-primary m-3 p-2  text-center text-light border border-3  data-toggle="
                    tooltip" data-placement="top" title="Choose options""><h4 class=" author"><%=mq.response3%></h4>
                    </button>
                <button type="button"
                    class="col-lg-5 btn btn-primary m-3 p-2  text-center text-light border border-3  data-toggle="
                    tooltip" data-placement="top" title="Choose options""><h4 class=" author"><%=mq.response4%></h4>
                    </button>
                <span class="correct visually-hidden"><%=mq.correct%></span>

            </div>
        </div>

    </div>

    <%})%>
    <div class="row-lg mt-5">
        <button class="btn btn-danger mx-4">Zeruj wynik</button>
        <a href="/create" class="btn btn-success mx-4">Dodaj Pytanie</a>
    </div>
</div>

<%-include('./partials/script')%>
<%-include('./partials/footer')%>